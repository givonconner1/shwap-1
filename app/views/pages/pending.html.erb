<div class="container">
  <h1>Pending Shift Exchange Requests</h1>
  
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Original Person</th>
      <th>Requested Taker of Shift:</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @availabilities.each do |availability| %>
      <tr>
         <td><%= availability.user.email %></td>
        <% for @request in availability.requests %>
        <td><%= @request.user.email %></td>
        <% end %>
        <td><%= availability.start_time.strftime("%B %d, %Y, %l:%M %p") %></td>
        <td><%= availability.end_time.strftime("%B %d, %Y, %l:%M %p") %></td>
        <% if availability.status == "Pending" %>
          <td style="background-color: yellow"><%= availability.status %></td>
        <% else %>
          <td style="background-color: green"><%= availability.status %></td>
        <% end %>

        <td><%= link_to 'View Request Details', availability %></td>
      </tr>
    
    <% end %>
  </tbody>
</table>
  </div>

